# General
alias please='sudo'
alias v='vim'
alias nv='nvim'
alias vim="nvim"
alias r='ranger'
alias lg='lazygit'
alias ldo='lazydocker'
alias lse='exa -lhi'
alias lvim="~/.local/bin/lvim"

# Command Shortcuts
alias tt='tmux attach -t'
alias ttt='tmux new-session -s'
alias tls='tmux ls'
alias tmx='tmuxinator'
alias tkill='tmux kill-session -t'

# Mac
alias show_all='defaults write com.apple.finder AppleShowAllFiles YES ; killall Finder'
alias hide_all='defaults write com.apple.finder AppleShowAllFiles NO;  killall Finder'
alias menu_hide='defaults write NSGlobalDomain _HIHideMenuBar -bool true; killall -KILL SystemUIServer'
alias menu_show='defaults write NSGlobalDomain _HIHideMenuBar -bool false; killall -KILL SystemUIServer'

# Shortcuts
alias slive='bundle exec jekyll serve'
alias ccd='cd ;exa -i'
alias dev='cd ~/dev'
alias demos="cd  ~/Desktop"
alias vault='cd ~/Library/Mobile\ Documents/iCloud~md~obsidian/Documents'

# dev
alias dotfiles='cd ~/dev/admin/dotfiles'
alias android='cd ~/dev/android'
alias react="cd ~/dev/react"
alias rn="cd ~/dev/rn"
